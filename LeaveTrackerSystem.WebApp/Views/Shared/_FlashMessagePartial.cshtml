@{
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var info = TempData["Info"] as string;
}

@if (!string.IsNullOrWhiteSpace(success) || !string.IsNullOrWhiteSpace(error) || !string.IsNullOrWhiteSpace(info))
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="margin-top: 70px; z-index: 1080;">
        @if (!string.IsNullOrWhiteSpace(success))
        {
            <div class="toast bg-success text-white border-0 fade" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex align-items-center">
                    <div class="toast-body">
                        <i class="bi bi-check-circle me-2"></i>@success
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(error))
        {
            <div class="toast bg-danger text-white border-0 fade" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex align-items-center">
                    <div class="toast-body">
                        <i class="bi bi-exclamation-triangle me-2"></i>@error
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(info))
        {
            <div class="toast bg-info text-white border-0 fade" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex align-items-center">
                    <div class="toast-body">
                        <i class="bi bi-info me-2"></i>@info
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>
}
@{
    var role = Context.Session.GetString("Role");
    var isLoggedIn = !string.IsNullOrWhiteSpace(role);
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isLoginPage = currentController == "Account" && currentAction == "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leave Tracker System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveTrackerSystem.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Employee" asp-action="Index">
                    <img src="~/img/LeaveTrackerLogo.png" alt="Leave Tracker Logo" style="height: 32px;" />
                    <span class="fw-bold fs-5">Leave Tracker System</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    @if (isLoggedIn)
                    {
                        
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @if (role == "Employee")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Employee" asp-action="Submit">Request Leave</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Employee" asp-action="MyRequests">My Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Employee" asp-action="LeaveSummary">Leave Summary</a>
                                </li>
                            }
                            @if (role == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Manager" asp-action="AllRequests">Pending Requests</a>
                                </li>
                            }
                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="AllRequests">All Requests</a>
                                </li>
                            }
                        </ul>
                    }
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-muted">
                                    Logged in as: <strong>@role</strong>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else if (!isLoginPage)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_FlashMessagePartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Leave Tracker System
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/chart.js/dist/chart.umd.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.toast').forEach(toastEl => {
                const isError = toastEl.classList.contains('bg-danger');
                const isInfo = toastEl.classList.contains('bg-info');

                const delay = isError ? 5000 : (isInfo ? 3500 : 3000);

                const toast = new bootstrap.Toast(toastEl, { delay: delay });
                toast.show();
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        setInterval(() => {
            fetch('/Account/CheckSession')
                .then(res => {
                    if (res.status === 440) {
                        window.location.href = '/Account/Login?msg=expired';
                    }
                })
                .catch(() => {});
        }, 30000);
    </script>
</body>
</html>
